{
  "textarea": {
    "border": {
      "radius": {
        "value": "{border.radius.sm.value}",
        "type": "borderRadius"
      },
      "width": {
        "value": "{border.width.md}",
        "type": "borderWidth"
      }
    },
    "danger": {
      "text": {
        "value": "{danger.text.value}",
        "type": "color"
      }
    },
    "default": {
      "background": {
        "value": "{color.grayscale.0.value}",
        "type": "color"
      },
      "text": {
        "value": "{text.primary.value}",
        "type": "color"
      }
    },
    "disabled": {
      "background": {
        "value": "{disabled.background.value}",
        "type": "color"
      },
      "text": {
        "value": "{disabled.text.value}",
        "type": "color"
      }
    },
    "focus": {
      "text": {
        "value": "{focus.textForm.value}",
        "type": "color"
      }
    },
    "font": {
      "value": {
        "fontFamily": "{fontFamilies.body}",
        "fontWeight": "{fontWeights.regular}",
        "lineHeight": "{lineHeights.text}",
        "fontSize": "{fontSizes.text}"
      },
      "type": "typography"
    },
    "margin": {
      "value": "0 0 {spacing.400.value}",
      "type": "spacing"
    },
    "minHeight": {
      "value": "{spacing.500.value}",
      "type": "sizing"
    },
    "outline": {
      "width": {
        "value": "{outline.width.value}",
        "type": "other"
      }
    },
    "padding": {
      "value": "{spacing.200.value}",
      "type": "spacing"
    }
  }
}