{
  "button": {
    "border": {
      "radius": {
        "value": "{border.radius.md.value}",
        "type": "borderRadius"
      },
      "width": {
        "value": "{border.width.md.value}",
        "type": "borderWidth"
      }
    },
    "danger": {
      "default": {
        "background": {
          "value": "{color.red.700.value}",
          "type": "color"
        },
        "text": {
          "value": "{text.light.value}",
          "type": "color"
        }
      },
      "hover": {
        "background": {
          "value": "{color.red.900.value}",
          "type": "color"
        }
      }
    },
    "font": {
      "value": {
        "fontFamily": "{fontFamilies.body}",
        "fontWeight": "{fontWeights.medium}",
        "lineHeight": "140%",
        "fontSize": "{fontSizes.text}"
      },
      "type": "typography"
    },
    "padding": {
      "value": "{spacing.125.value} {spacing.150.value}",
      "type": "spacing"
    },
    "primary": {
      "default": {
        "background": {
          "value": "{bg.primary.value}",
          "type": "color"
        },
        "text": {
          "value": "{text.light.value}",
          "type": "color"
        }
      },
      "hover": {
        "background": {
          "value": "{color.blue.800.value}",
          "type": "color"
        }
      }
    },
    "secondary": {
      "default": {
        "background": {
          "value": "transparent",
          "type": "color"
        },
        "text": {
          "value": "{link.default.value}",
          "type": "color"
        }
      },
      "hover": {
        "background": {
          "value": "{color.blue.100.value}",
          "type": "color"
        }
      },
      "active": {
        "background": {
          "value": "{color.blue.100.value}",
          "type": "color"
        }
      }
    },
    "mobile": {
      "margin": {
        "value": "{spacing.25.value} 0",
        "type": "spacing"
      },
      "width": {
        "value": "{container.full.value}",
        "type": "sizing"
      }
    },
    "shared": {
      "active": {
        "background": {
          "value": "{active.background.value}",
          "type": "color"
        },
        "text": {
          "value": "{active.text.value}",
          "type": "color"
        }
      },
      "focus": {
        "background": {
          "value": "{focus.background.value}",
          "type": "color"
        },
        "box-shadow": {
          "value": "0 0 0 {border.width.md.value} {color.grayscale.0.value}",
          "type": "color"
        },
        "outline": {
          "width": {
            "value": "{outline.width.value}",
            "type": "other"
          }
        },
        "text": {
          "value": "{focus.text.value}",
          "type": "color"
        }
      },
      "disabled": {
        "background": {
          "value": "{disabled.background.value}",
          "type": "color"
        },
        "text": {
          "value": "{disabled.text.value}",
          "type": "color"
        }
      }
    },
    "small": {
      "font": {
        "value": {
          "fontFamily": "{fontFamilies.body}",
          "fontWeight": "{fontWeights.regular}",
          "lineHeight": "{lineHeights.text}",
          "fontSize": "80%"
        },
        "type": "typography"
      },
      "padding": {
        "value": "{spacing.150.value}",
        "type": "spacing"
      }
    },
    "width": {
      "value": "fit-content",
      "type": "sizing"
    }
  }
}
