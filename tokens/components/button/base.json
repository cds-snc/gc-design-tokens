{
  "button": {
    "danger": {
      "default": {
        "value": "$colors.red.200",
        "type": "button"
      },
      "hover": {
        "value": "$colors.red.400",
        "type": "button"
      },
      "active": {
        "value": "$colors.red.200",
        "type": "button"
      }
    },
    "primary": {
      "default": {
        "value": "$colors.blue.800",
        "type": "button"
      },
      "solid": {
        "hover": {
          "background": {
            "value": "$colors.blue.300",
            "type": "button"
          }
        },
        "active": {
          "background": {
            "value": "$colors.blue.900",
            "type": "button"
          }
        }
      },
      "outline": {
        "hover": {
          "background": {
            "value": "$colors.blue.100",
            "type": "button"
          },
          "text": {
            "value": "$colors.blue.400",
            "type": "button"
          }
        },
        "active": {
          "background": {
            "value": "$colors.blue.200",
            "type": "button"
          },
          "text": {
            "value": "$colors.blue.700",
            "type": "button"
          }
        }
      },
      "text-only": {
        "hover": {
          "text": {
            "value": "$colors.blue.600",
            "type": "button"
          }
        },
        "active": {
          "text": {
            "value": "$colors.blue.800",
            "type": "button"
          }
        }
      }
    },
    "secondary": {
      "default": {
        "value": "$colors.grayscale.500",
        "type": "button"
      },
      "hover": {
        "value": "$colors.grayscale.900",
        "type": "button"
      },
      "active": {
        "value": "$colors.grayscale.300",
        "type": "button"
      }
    },
    "shared": {
      "solid": {
        "text": {
          "value": "$colors.grayscale.0",
          "type": "button"
        }
      },
      "focus": {
        "background": {
          "value": "$colors.blue.500",
          "type": "button"
        },
        "text": {
          "value": "$colors.grayscale.0",
          "type": "button"
        }
      },
      "disabled": {
        "background": {
          "value": "$colors.blue.200",
          "type": "button"
        },
        "border": {
          "value": "$colors.blue.400",
          "type": "button"
        },
        "text": {
          "value": "$colors.blue.800",
          "type": "button"
        }
      }
    }
  }
}