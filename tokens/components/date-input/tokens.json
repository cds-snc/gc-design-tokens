{
  "date-input": {
    "danger": {
      "border": {
        "value": "{danger.border.value}",
        "type": "color"
      }
    },
    "fieldset": {
      "font": {
        "desktop": {
          "value": {
            "fontFamily": "{fontFamilies.body}",
            "fontWeight": "{fontWeights.semibold}",
            "lineHeight": "{lineHeights.text}",
            "fontSize": "{fontSizes.text}"
          },
          "type": "typography"
        },
        "mobile": {
          "value": {
            "fontFamily": "{fontFamilies.body}",
            "fontWeight": "{fontWeights.semibold}",
            "lineHeight": "{lineHeights.textMobile}",
            "fontSize": "{fontSizes.textMobile}"
          },
          "type": "typography"
        }
      },
      "error": {
        "margin": {
          "value": "0 0 {spacing.50.value}",
          "type": "spacing"
        }
      },
      "hint": {
        "margin": {
          "value": "0 0 {spacing.50.value}",
          "type": "spacing"
        }
      },
      "margin": {
        "value": "0 0 {spacing.300.value}",
        "type": "spacing"
      }
    },
    "label": {
      "font": {
        "desktop": {
          "value": {
            "fontFamily": "{fontFamilies.body}",
            "fontWeight": "{fontWeights.medium}",
            "lineHeight": "{lineHeights.text}",
            "fontSize": "{fontSizes.text}"
          },
          "type": "typography"
        },
        "mobile": {
          "value": {
            "fontFamily": "{fontFamilies.body}",
            "fontWeight": "{fontWeights.medium}",
            "lineHeight": "{lineHeights.textMobile}",
            "fontSize": "{fontSizes.textMobile}"
          },
          "type": "typography"
        }
      }
    },
    "margin": {
      "value": "{spacing.200.value}",
      "type": "spacing"
    }
  }
}