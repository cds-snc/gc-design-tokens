{
  "lang-toggle": {
    "active": {
      "text": {
        "value": "{link.light.value}",
        "type": "color"
      },
      "background": {
        "value": "{brand.active.background.value}",
        "type": "color"
      }
    },
    "default": {
      "text": {
        "value": "{link.default.value}",
        "type": "color"
      }
    },
    "focus": {
      "background": {
        "value": "{focus.background.value}",
        "type": "color"
      },
      "text": {
        "value": "{focus.text.value}",
        "type": "color"
      }
    },
    "font": {
      "family": {
        "value": "{fontFamilies.body.value}",
        "type": "fontFamilies"
      },
      "size": {
        "value": "{fontSizes.text.value}",
        "type": "fontSizes"
      },
      "weight": {
        "value": "{fontWeights.regular.value}",
        "type": "fontWeights"
      }
    },
    "hover": {
      "text": {
        "value": "{link.hover.value}",
        "type": "color"
      }
    },
    "lineHeight": {
      "value": "{lineHeights.text.value}",
      "type": "lineHeights"
    },
    "padding": {
      "value": "{spacing.300.value}",
      "type": "spacing"
    }
  }
}
